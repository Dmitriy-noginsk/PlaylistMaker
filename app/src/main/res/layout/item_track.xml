<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Обложка -->
    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/cover_size"
        android:layout_height="@dimen/cover_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Стрелка -->
    <ImageView
        android:id="@+id/iv_chevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_chevron_right_24"
        app:layout_constraintTop_toTopOf="@id/iv_cover"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/chevron_right" />

    <!-- Контейнер для названия и подстроки -->
    <LinearLayout
        android:id="@+id/content_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/between_cover_text"
        android:layout_marginTop="@dimen/search_margin_14"
        android:layout_marginBottom="@dimen/search_margin_14"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/iv_cover"
        app:layout_constraintEnd_toStartOf="@id/iv_chevron"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Название трека -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_16"
            android:fontFamily="@font/medium"
            android:textColor="@color/letters"
            android:layout_marginBottom="1dp"
            tools:text="docdsijcosdcijosdcisdocidsoci" />

        <!-- Артист и время -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingEnd="12dp">

            <TextView
                android:id="@+id/tv_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/regular"
                android:textColor="@color/text_secondary"
                tools:text="зшгрмукзщпмркуощзпгукщпощкупощукпукщпокущпокщпуко" />

            <!-- Разделитель -->
            <TextView
                android:id="@+id/tv_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•"
                android:paddingHorizontal="6dp"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_secondary" />

            <!-- Длительность -->
            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/regular"
                android:textColor="@color/text_secondary"
                tools:text="04:24" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
