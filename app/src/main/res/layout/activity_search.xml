<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_size"
    android:paddingEnd="@dimen/padding_size"
    android:paddingTop="10dp"
    android:background="@color/settings">

    <!-- Назад и Заголовок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/padding_size">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/layout_width_48"
            android:layout_height="@dimen/layout_width_48"
            android:src="@drawable/ic_back"
            app:tint="@color/icon_arrow_back_color"
            android:layout_marginEnd="@dimen/layout_width_0"/>

        <TextView
            android:id="@+id/tv_title"
            android:fontFamily="@font/bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_size"
            android:text="@string/search_title"
            android:textColor="@color/letters"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Поле поиска -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_search"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/ic_search"
            app:tint="@color/icon_search_color" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:hint="@string/search_hint"
            android:textColor="@color/letters"
            android:textColorHint="@color/icon_search_color"
            android:inputType="text"
            android:maxLines="1"
            android:ellipsize="end"/>

        <!-- Кнопка очистки -->
        <ImageView
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/ic_clear"
            app:tint="@color/letters"
            android:visibility="gone"/>
    </LinearLayout>



</LinearLayout>
