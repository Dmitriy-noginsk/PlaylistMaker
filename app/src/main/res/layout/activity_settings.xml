<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_size"
    android:paddingEnd="@dimen/padding_size"
    android:paddingTop="10dp"
    android:background="@android:color/white">

    <!-- Назад и Заголовок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/padding_size">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/layout_width_48"
            android:layout_height="@dimen/layout_width_48"
            android:src="@drawable/ic_back"
            android:layout_marginEnd="@dimen/layout_width_0"/>

        <TextView
            android:id="@+id/tv_title"
            android:fontFamily="@font/bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_size"
            android:text="@string/settings_title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Темная тема  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/gap_size">

        <TextView
            android:layout_width="@dimen/layout_width_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dark_theme"
            android:fontFamily="@font/regular"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_16"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/btn_theme_toggle"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_theme" />
    </LinearLayout>

    <!-- Поделиться приложением -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/padding_vertical_12">

        <TextView
            android:layout_width="0dp"
            android:fontFamily="@font/regular"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/share_app"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:id="@+id/icon_share"
            android:layout_width="@dimen/layout_width_24"
            android:layout_height="@dimen/layout_height_24"
            android:src="@drawable/ic_share" />
    </LinearLayout>

    <!-- Написать в поддержку -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/padding_vertical_12">

        <TextView
            android:layout_width="@dimen/layout_width_0"
            android:fontFamily="@font/regular"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/support"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:id="@+id/icon_support"
            android:layout_width="@dimen/layout_width_24"
            android:layout_height="@dimen/layout_height_24"
            android:src="@drawable/ic_support" />
    </LinearLayout>

    <!-- Пользовательское соглашение -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/padding_vertical_12">

        <TextView
            android:layout_width="@dimen/layout_width_0"
            android:fontFamily="@font/regular"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/terms"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:id="@+id/icon_arrow"
            android:layout_width="@dimen/layout_width_24"
            android:layout_height="@dimen/layout_height_24"
            android:src="@drawable/ic_arrow_right" />
    </LinearLayout>
</LinearLayout>
