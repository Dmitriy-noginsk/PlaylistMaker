<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_size"
    android:paddingEnd="@dimen/padding_size"
    android:paddingTop="10dp"
    android:background="@color/settings">

    <!-- Назад и Заголовок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/padding_size">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/layout_width_48"
            android:layout_height="@dimen/layout_width_48"
            android:src="@drawable/ic_back"
            app:tint="@color/icon_arrow_back_color"
            android:layout_marginEnd="@dimen/layout_width_0"/>

        <TextView
            android:id="@+id/tv_title"
            android:fontFamily="@font/bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_size"
            android:text="@string/settings_title"
            android:textColor="@color/letters"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Темная тема -->
    <LinearLayout
        style="@style/SettingsItemContainer"
        android:paddingVertical="@dimen/gap_size">

        <TextView
            style="@style/SettingsItemText"
            android:text="@string/dark_theme"
            android:gravity="center_vertical" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_dark_theme"
            android:layout_width="56dp"
            android:layout_height="40dp"
            app:theme="@style/Color1SwitchStyle" />
    </LinearLayout>

    <!-- Поделиться приложением -->
    <LinearLayout
        android:id="@+id/btn_share"
        style="@style/SettingsItemContainer">

        <TextView
            style="@style/SettingsItemText"
            android:text="@string/share_app" />

        <ImageView
            android:id="@+id/icon_share"
            style="@style/SettingsItemIcon"
            app:tint="@color/icon_support_color"
            android:src="@drawable/ic_share" />
    </LinearLayout>

    <!-- Написать в поддержку -->
    <LinearLayout
        android:id="@+id/btn_support"
        style="@style/SettingsItemContainer">

        <TextView
            style="@style/SettingsItemText"
            android:text="@string/support" />

        <ImageView
            android:id="@+id/icon_support"
            app:tint="@color/icon_support_color"
            style="@style/SettingsItemIcon"
            android:src="@drawable/ic_support" />
    </LinearLayout>

    <!-- Пользовательское соглашение -->
    <LinearLayout
        android:id="@+id/btn_agreement"
        style="@style/SettingsItemContainer">

        <TextView
            style="@style/SettingsItemText"
            android:text="@string/terms" />

        <ImageView
            android:id="@+id/icon_arrow"
            app:tint="@color/icon_support_color"
            style="@style/SettingsItemIcon"
            android:src="@drawable/ic_arrow_right" />
    </LinearLayout>

</LinearLayout>
